{
  "name": "@looopy-ai/core",
  "version": "2.1.19",
  "description": "RxJS-based AI agent framework",
  "repository": {
    "url": "https://github.com/looopy-ai/lib"
  },
  "keywords": [
    "agent",
    "ai",
    "rxjs",
    "a2a",
    "llm"
  ],
  "license": "MIT",
  "author": "",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.esm.json",
    "check:exports": "pnpx ts-unused-exports ./tsconfig.json --excludePathsFromReport='index'",
    "check:types": "tsc --noEmit",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "prepare": "pnpm build",
    "test": "CI=true vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@geee-be/sse-stream-parser": "^1.0.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.207.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/instrumentation": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.2",
    "rxjs": "^7.8.2",
    "zod": "^4.1.11"
  },
  "packageManager": "pnpm@10.6.5",
  "publishConfig": {
    "access": "public"
  }
}
