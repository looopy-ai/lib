{
  "name": "looopy",
  "version": "1.0.0",
  "description": "RxJS-based AI agent framework implementing the A2A protocol",
  "main": "src/core/index.ts",
  "type": "module",
  "scripts": {
    "test": "CI=true vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "example": "tsx examples/basic-agent.ts",
    "example:litellm": "tsx examples/litellm-agent.ts",
    "build": "tsc --noEmit",
    "lint": "biome check src examples tests",
    "lint:fix": "biome check --write src examples tests"
